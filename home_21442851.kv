<home>
    name: 'home' 
    canvas.before:
        Color:
            rgba: 1,0.4,0.3,1
        Rectangle:
            pos: self.pos
            size: self.size

    Column:
        halign: 'center'
        valign: 'center'
        padding: dp(100)
        spacing: dp(20)
        
        MDLabel:
            id: label
            text: 'WELCOME'
            font_size: dp(43)
            color: 1,1,1,1

        Image:
            source:'image.jpg'
        
        Widget:
            expandable: True
            
        MDFillRoundFlatIconButton: 
            text: 'Login' 
            icon:'account'
            icon_color: 1,1,1,1
            on_release: root.clickme()

        MDFillRoundFlatIconButton: 
            text: 'Registration' 
            icon:'account'
            icon_color: 1,1,1,1
            on_release: root.register()

<SignInTextField@MDTextField> 
    color_mode: 'custom' 
    line_color_focus: 1,1,1,1 
    line_color_normal: 1,1,1,1
    hint_text_color: 1,1,1,1 
    current_hint_text_color: 1,1,1,0.6 
    text_color: 1,1,1,1
        
    canvas.before:
        Color:
            rgba: 1,1,1,1
